{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "~/.Trash",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "es2018",
    "allowJs": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "strictBindCallApply": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es5",
      "es2020"
    ],
    "paths": {
      "obsidian": ["src/types/obsidian.d.ts"]
    },
    "types": ["vitest/globals"]
  },
  "ts-node": {
    "compilerOptions": {
    },
    "esm": true
  },
  "include": [
    "**/*.ts",
    "src/types"
  ],
  "exclude": [
    "node_modules/"
  ]
}
