{
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "strict": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "es2018",
    "allowJs": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es5",
      "es2020"
    ],
  },
  "include": [
    "**/*.ts",
    "src/types"
  ],
  "exclude": [
    "node_modules/"
  ]
}
